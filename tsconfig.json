{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "declaration": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "strict": true,
        "typeRoots": [
            /* added due to bug, because 'npm link' don't install dependencies (ex. @types/jquery) */
            "node_modules/@types",
            "node_modules/@teronis/ts-core/node_modules/@types",
        ]
    },
    "include": [
        "src/**/*"
    ]
}